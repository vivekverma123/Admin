<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addFlatOwner"
        android:layout_width="149dp"
        android:layout_height="44dp"
        android:text="Add Flat Owner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/removeFlatOwner"
        android:layout_width="181dp"
        android:layout_height="44dp"
        android:text="Remove Flat Owner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addFlatOwner"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/viewall"
        android:layout_width="197dp"
        android:layout_height="44dp"
        android:text="View All Flat Owners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/removeFlatOwner"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/initialbal"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="initialise balance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewall"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/app_main_req"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="approve maintenance requests"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/initialbal"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/view_months"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="view/edit monthly record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_main_req"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/app_advanc_req"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="approve advance pay request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_months"
        app:layout_constraintVertical_bias="0.132" />

    <Button
        android:id="@+id/appr_due_req"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Approve due request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_advanc_req"
        app:layout_constraintVertical_bias="0.185" />

</androidx.constraintlayout.widget.ConstraintLayout>